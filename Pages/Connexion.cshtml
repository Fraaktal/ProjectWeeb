@model ProjectWeeb.Pages.ConnectionModel
@{
    <div class="container">
        <form action="" method="get" class="Connexion">
            <div>
                <label for="username">Username or Email</label>
                <input type="text" name="username" id="username" required />
            </div>
            <div>
