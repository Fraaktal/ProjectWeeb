@page
@model ProjectWeeb.Pages.Lolo.InscriptionModel
@{
    <div class="container">
        <div id="background">
            <img src="/src/Accueil_background.png" class="stretch" alt="" />
        </div>

        <form method="POST">
            <div>
                <label for="login">Pseudonyme</label>
                <input type="text" name="login" id="login" required />
            </div>
            <div>
                <label for="password">Mot de passe</label>
                <input type="password" name="password" id="password" required />
            </div>
            <div>
                <label for="confPassword">Confirmer le mot de passe</label>
                <input type="password" name="confPassword" id="confPassword" minlength="4" required />
            </div>
            <input type="button" value="Valider" class="Button"/>
        </form>
    </div>

}
